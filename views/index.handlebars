<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 text-center">
			<h1>Burger Buffet!</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-4">
			<h2>Waiting to be devoured:</h2>
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
							{{>burgers/burger-block devoured=false}}
						{{/unless}}
					{{/each}}
				</ul>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-4">
			<img src="/assets/images/burger.jpg" alt="burger-logo">
		</div>
		<div class="col-xs-12 col-sm-12 col-md-4">
			<h2>Devoured:</h2>
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{>burgers/burger-block devoured=true}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 text-center">
			<h2>Add a Burger</h2>
			<form class="create-form">
				<div class="form-group">
					<label for="burger">Burger Name:</label>
			   		<input type="text" id="burger" name="name">
				</div>
				<button type="submit" id="add-burger">Add burger</button>
			</form>
		</div>
	</div>
</div>



